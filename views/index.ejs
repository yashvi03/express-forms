<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= title %></h1>
    <ul>
      <% if (locals.users) {%> <% users.forEach(function(user) { %>
      <li>
        ID: <%= user.id %>, Name: <%= user.firstName %> <%= user.lastName %>, Email: <%= user.email %>, Age: <%= user.age %>, Bio: <%= user.bio %>
      </li>
      <a href="/<%= user.id %>/update">Update</a>
      <form
        action="/<%= user.id %>/delete"
        method="POST"
        style="display: inline"
      >
        <button
          type="submit"
          onclick="return confirm('Are you sure you want to delete this user?');"
        >
          Delete
        </button>
      </form>
      <% }); %> <% } %>
    </ul>

    <a href="/create">Create a user</a>
    <a href="/search">Search a user</a>
  </body>
</html>
